<p id="notice"><%= notice %></p>

<h1>Listing homes(index)</h1>

<%= form_tag homes_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<%= link_to "Advanced Search", new_search_path %>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Make</th>
      <th>Year</th>
      <th>Model</th>
      <th>Price</th>
      <th>Description</th>
      <!-- <th>Owner</th>
      <th>Email</th> -->
      <th>User</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
      <tr>
        <td><%= home.category %></td>
        <td><%= home.make %></td>
        <td><%= home.year %></td>
        <td><%= home.model %></td>
        <td><%= home.price %></td>
        <td><%= home.description %></td>
        <!-- <td><%= home.owner %></td> -->
        <!-- <td><%= home.email %></td> -->
        <!-- <td><%= home.phone %></td> -->
        <td><%= home.user.email %></td>
        <td><%= link_to 'Show', home %></td>
        <td><%= link_to 'Edit', edit_home_path(home) %></td>
        <td><%= link_to 'Destroy', home, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Home', new_home_path %>
